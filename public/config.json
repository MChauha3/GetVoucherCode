{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "images/Voucher_image.png",
    "category": "message"
  },
  "type": "REST",
  "lang": {
    "en-US": {
      "name": "MDS APP Connect",
      "description": "A Template for a custom Journey Builder activity"
    }
  },
  "arguments": {
    "execute": {
      "inArguments": [{
        "unique_key":  "{{Contact.Attribute.TestSunnyDE.unique_key}}",
        "email_id":    "{{Contact.Attribute.TestSunnyDE.email_id}}",
        "first_name":  "{{Contact.Attribute.TestSunnyDE.first_name}}",
        "last_name":   "{{Contact.Attribute.TestSunnyDE.last_name}}",
        "age":         "{{Contact.Attribute.TestSunnyDE.age}}",
        "birth_date":  "{{Contact.Attribute.TestSunnyDE.birth_date}}",
        "phone_number":"{{Contact.Attribute.TestSunnyDE.phone_number}}",
        "is_married":  "{{Contact.Attribute.TestSunnyDE.is_married}}"
      }], 
      "outArguments": [{
        "voucher_code":""
      }],
      "timeout": 100000,
      "retryCount": 1,
      "retryDelay": 10000,
      "concurrentRequests": 5,
      "url": "https://hint-mds-integration.herokuapp.com/journeybuilder/execute"
    }
  },
  "configurationArguments": {
    "applicationExtensionKey": "627f0285-8ffa-4cc7-adcb-9d71cd57212f",
    "save": {
      "url": "https://hint-mds-integration.herokuapp.com/journeybuilder/save",
      "verb": "POST"
    },
    "publish": {
      "url": "https://hint-mds-integration.herokuapp.com/journeybuilder/publish",
      "verb": "POST"
    },
    "stop": {
      "url": "https://hint-mds-integration.herokuapp.com/journeybuilder/stop",
      "verb": "POST"
    },
    "validate": {
      "url": "https://hint-mds-integration.herokuapp.com/journeybuilder/validate",
      "verb": "POST"
    }
  },
  "userInterfaces": {
    "configModal": {
      "height": 400,
      "width": 1000,
      "fullscreen": false
    }
  },
  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "unique_key": {
              "dataType": "Text",
              "isNullable": false,
              "direction": "in"
            }
          },
          {
            "email_id": {
              "dataType": "Email",
              "isNullable": false,
              "direction": "in"
            }
          },
          {
            "first_name": {
              "dataType": "Text",
              "isNullable": true,
              "direction": "in"
            }
          },
          {
            "last_name": {
              "dataType": "Text",
              "isNullable": true,
              "direction": "in"
            }
          },
          {
            "age": {
              "dataType": "Number",
              "isNullable": true,
              "direction": "in"
            }
          },
          {
            "birth_date": {
              "dataType": "Date",
              "isNullable": true,
              "direction": "in"
            }
          },
          {
            "phone_number": {
              "dataType": "Phone",
              "isNullable": true,
              "direction": "in"
            }
          },
          {
            "is_married": {
              "dataType": "Boolean",
              "isNullable": true,
              "direction": "in"
            }
          }
        ],
        "outArguments": [
          {
            "voucher_code": {
              "dataType": "Text",
              "isNullable": true,
              "direction": "in"
            }
          }
        ]
      }
    }
  }
}